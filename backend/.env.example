PORT=4000
MONGO_URI=mongodb://localhost:27017/touchback
JWT_SECRET=change_me
# Replace with your real Google OAuth Web Client ID (DO NOT COMMIT REAL SECRETS)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
# Replace with your real Google OAuth Web Client Secret (KEEP ONLY IN .env, NEVER FRONTEND)
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback
FRONTEND_URL=http://localhost:5173

# SMTP (Password Reset)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
MAIL_FROM="TouchBack Support <no-reply@yourdomain.com>"
SMTP_SECURE=false

# Gemini (Google Generative AI) for Chatbot
# Get key from https://aistudio.google.com
GEMINI_API_KEY=
# Khuyến nghị dùng alias -latest để tương thích API v1
GEMINI_MODEL=gemini-1.5-flash-latest

# VNPay Sandbox Config
VNP_TMN_CODE=YOUR_TMN_CODE
VNP_HASH_SECRET=YOUR_HASH_SECRET
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
# Return URL (front-end) optional override. If omitted we derive from request origin.
VNP_RETURN_URL=http://localhost:4000/orders/vnpay_return

