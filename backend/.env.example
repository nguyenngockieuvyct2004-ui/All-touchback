PORT=4000
MONGO_URI=mongodb://localhost:27017/touchback
JWT_SECRET=change_me
# Replace with your real Google OAuth Web Client ID (DO NOT COMMIT REAL SECRETS)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
# Replace with your real Google OAuth Web Client Secret (KEEP ONLY IN .env, NEVER FRONTEND)
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback
